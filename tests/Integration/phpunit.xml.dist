<?xml version="1.0" encoding="UTF-8"?>
<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
  backupGlobals="false"
  colors="true"
  stopOnError="true"
  stopOnFailure="true"
  bootstrap="bootstrap.php">

    <php>
        <server name="BUILDER_CLASS" value="Kassko\ObjectHydratorIntegrationTest\Helper\TestHydratorBuilder"/>
    </php>

    <testsuites>
        <testsuite name="Test Suite">
            <directory suffix="php">.</directory>
            <exclude>./Fixture</exclude>
            <exclude>./Helper</exclude>
            <exclude>./Phpunit</exclude>
        </testsuite>
    </testsuites>

    <coverage>
        <include>
            <directory>./src</directory>
        </include>
    </coverage>

    <listeners>
        <listener
            class="\Kassko\ObjectHydratorIntegrationTest\Phpunit\TestListener"
            file="./Phpunit/TestListener.php"
        />
    </listeners>
</phpunit>
